# Database — Admin (superuser, created by Docker at init)
# POSTGRES_USER must match the username in DATABASE_ADMIN_URL
POSTGRES_USER=postgres
POSTGRES_PASSWORD=change-me-admin
POSTGRES_DB=journal

# Database — App user (restricted, respects RLS, created by init script)
# POSTGRES_APP_USER must match the username in DATABASE_URL
POSTGRES_APP_USER=app_user
POSTGRES_APP_PASSWORD=change-me-app

# Connection URLs (must stay in sync with credentials above)
DATABASE_URL=postgresql://app_user:change-me-app@localhost:5432/journal
DATABASE_ADMIN_URL=postgresql://postgres:change-me-admin@localhost:5432/journal

# Server
PORT=3000
BETTER_AUTH_SECRET=your_better_auth_secret_here
BETTER_AUTH_URL=http://localhost:3000
CLIENT_URL=http://localhost:5173

# Email (Resend)
RESEND_API_KEY=re_your_api_key
EMAIL_FROM=onboarding@resend.dev

# Client (Build Time)
VITE_API_URL=http://localhost:3000
VITE_ENCRYPTION_KEY=your_encryption_key_here

# Test User
TEST_USER_EMAIL=test@philapps.com
TEST_USER_PWD=password123
